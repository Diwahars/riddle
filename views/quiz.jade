extends layout
block content
  div.header
    h3
      a(href="/").title= title
    nav
      if !user
        a.button(href="/login")= __("Login")
      else
        if user.group === 'admin'
          a.button(href="/admin")= __("Admin")
        a.button(href="/logout") #{__("Logout")} (#{user.username})
  div.container
    div.row
      if !user
        p Welcome to #{title}
        a.button.button-primary(href="/register")= __("Register")
      else
        a.button.float-right(href="/")= __("Back")
        h1= data.title
        div !{data.content}
        form(action="/key", method="POST")
          input(name="key", type="text")
          input(name="qid", type="text", value=data._id, style="display:none")
          br
          input.button.button-primary(type="submit", value=__("Submit"))