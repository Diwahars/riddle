extends admin

block view
  a.button.button-primary.float-right#save(href="#")= __("Save")
  h1= __("Flow")
  if message && message.length
    p.success #{message}
  p= __("Use ctrl+mouse to move an entry, click to select entries or edges, select & backspace to delete a edge.")
  p= __("Please DO NOT modify it after game start!")
  div.row.flow
  div.row.data-table
  form#hide-form(action="/admin/flow/save", method="POST")
    input#form-data(name="data")

block footer
  script(type="text/javascript", src="/javascripts/d3.v3.min.js")
  script(type="text/javascript").
    var data = !{JSON.stringify(data)};
    var i18n = {'Quiz':'!{__("Quiz")}'};
  script(type="text/javascript", src="/javascripts/flow.js")
